<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/medium_margin"
    tools:context=".TampilActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_film"
            android:layout_width="200dp"
            android:layout_height="256dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/medium_margin"
            android:contentDescription="@string/gambar"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tv_judul"
            android:layout_toRightOf="@id/iv_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/judul_film"
            android:textColor="@android:color/black"
            android:textSize="@dimen/large_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tahun"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_judul"
            android:layout_toRightOf="@id/iv_film"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/tahun_terbit" />

        <TextView
            android:id="@+id/tv_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tahun"
            android:layout_toRightOf="@id/iv_film"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/genre"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pemain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_below="@id/tv_genre"
            android:layout_toRightOf="@id/iv_film"
            android:text="@string/pemain"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iv_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_film"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Sinopsis:"/>

        <TextView
            android:id="@+id/tv_sipnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_label"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/sipnosis"
            android:textSize="@dimen/medium_text" />
    </RelativeLayout>
</ScrollView>